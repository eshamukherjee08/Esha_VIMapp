%h2 Forgot your password?
= form_for(@admin, :as => @admin, :url => edit_admin_password_path, :html => { :method => :post }) do |f|
  = devise_error_messages!
  %div
    = f.label :email
    %br/
    = f.email_field :email
  %div
    = f.submit "Send me reset password instructions"
= render :partial => "devise/shared/links"
