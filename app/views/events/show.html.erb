<p id="notice"><%= notice %></p>
<h1>Registered Candidates</h1><br />
<%= link_to 'Back', events_path %>
<div id="search">
	<p>
  	<h3 style="display:inline"><b>Event date:</b></h3>
  	<%= @event.event_date.strftime("%b %d, %Y") %>
	</p>

	<p>
  	<h3 style="display:inline"><b>Name:</b></h3>
  	<%= @event.name %>
	</p>
</div>

<br />

<% if @events_candidates.empty? %>
  <h3 style="text-align:center;color:red;margin-top:40px">NO REGISTRATIONS FOR THIS EVENT</h3>
<% else %>
 <div id="search_category">
   <table id="candidate_table">
     <tr>
       <th>Name</th>
       <th>ID</th>
       <th>Salary Expected</th>
       <th>Batch ID</th>
       <th>Attended</th>
     </tr>
   <%= form_tag mark_attended_event_events_candidates_path(@event) do %>
     <% @events_candidates.each do |e| %>
       <% if !e.attended %>
         <tr>
           <td style="width:1px"><%= e.candidate.name %></td>
           <td style="width:1px"><%= e.candidate.id %></td>
           <td style="width:1px"><%= e.candidate.salary_exp %></td>
           <td style="width:1px"><%= e.candidate.batches.first.id %></td>
           <td style="width:1px"><%= check_box_tag("attended[ #{e.id} ]")%></td>
         </tr>
       <% else %>
         <tr>
           <td style="width:1px"><%= e.candidate.name %></td>
           <td style="width:1px"><%= e.candidate.id %></td>
           <td style="width:1px"><%= e.candidate.salary_exp %></td>
           <td style="width:1px"><%= e.candidate.batches.first.id %></td>
           <td style="width:1px"><%= image_tag("check.jpg") %></td>
         </tr>
       <% end %>
     <% end %>
     </table>
 		</div>
 		<br />
		<div class="actions" style="float:right;margin-right:170px">
 		<%= submit_tag 'Mark Attended' %>
 		</div>
 <% end %>
<% end %>