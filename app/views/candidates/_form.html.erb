<%= form_for @candidate, :html => { :multipart => true } do |f| %>
  <% if @candidate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>

      <ul>
      <% @candidate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :Date_Of_Birth %><br />
    <%= f.datepicker :dob %>
  </div><br /><br /><br /><br /><br /><br /><br /><br />
  
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, :rows => 4, :columns => 10 %>
  </div>
  
  <div class="field">
    <%= f.label :current_state %><br />
    <%= f.select("current_state", STATE, {:prompt => '--Select Current State--'}) %>
  </div>
  
  <div class="field">
    <%= f.label :home_town %><br />
    <%= f.text_field :home_town %>
  </div>
  
  <div class="field">
    <%= f.label :mobile_number %><br />
    <%= f.text_field :mobile_number %>
  </div>
  
  <div class="field">
    <%= f.label :experience %><br />
    <%= f.select("exp", EXPERIENCE, {:prompt => '--Select Experience--'}) %>
  </div>
  
  <div class="field">
    <%= f.label :salary_exp %><br />
    <%= f.select("salary_exp", SALARY, {:prompt => '--Select Expected Salary--'}) %>
  </div>
  
  <div class="field">
    <%= f.label :resume %><br />
    <%= f.file_field :resume %>
  </div>
  <%= hidden_field_tag :event_id, @event_id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
