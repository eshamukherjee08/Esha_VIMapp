#main_candidate
  = nested_form_for @candidate, :html => { :multipart => true } do |f|
    = render :partial => 'shared/errors', :locals => {:obj => @candidate}
    #even_f
      .field
        = f.label :email
        %br/
        = f.text_field :email, :size => 55
    #odd_f
      .field
        = f.label :name
        %br/
        = f.text_field :name, :size => 55
    #even_f
      .field
        = f.label :address
        %br/
        = f.text_area :address, :rows => 4, :columns => 10
    #odd_f
      .field
        = f.label :dob, "Date Of Birth"
        %br/
        = f.date_select :dob, :start_year => 1950, :end_year => 1990, :prompt => {:day => 'Select day', :month => 'Select month', :year => 'Select year'}
    #ht_even_f
      .field
        = f.label :home_town
        %br/
        = f.text_field :home_town, :size => 55
    #odd_f
      .field
        = f.label :current_state
        %br/
        = f.select(:current_state, STATE, {:prompt => '--Select Current State--'})
    #even_f
      .field
        = f.label :mobile_number
        %br/
        (+91)#{f.text_field :mobile_number, :size => 45}
    #odd_f
      = f.fields_for :events_candidates
      = hidden_field_tag :event_id, params[:event_id]
    #terms
      = f.check_box 'terms'
      I Agree to terms and conditions laid by VinSol.
    .actions
      = f.submit
